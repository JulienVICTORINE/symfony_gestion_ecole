{% extends 'base.html.twig' %}

{% block title %}Modifier l'Étudiant
{% endblock %}

{% block body %}
	<h1>Modifier l'étudiant "{{ etudiant.prenom }}
		{{ etudiant.nom}}"</h1>

	{{ form_start(form) }}

	<div class="mb-3">
		{{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.nom) }}
	</div>

	<div class="mb-3">
		{{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.prenom) }}
	</div>

	<div class="mb-3">
		{{ form_label(form.email, 'E-mail', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.email) }}
	</div>

	<div class="mb-3">
		{{ form_label(form.dateNaissance, 'Date de naissance', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.dateNaissance) }}
	</div>

	<div class="mb-3">
		{{ form_label(form.niveau, 'Niveau', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.niveau, {'attr': {'class': 'form-select'}}) }}
		{{ form_errors(form.niveau) }}
	</div>

	<div class="mb-3">
		{{ form_label(form.cours, 'Cours suivis', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.cours, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.cours) }}
	</div>

	<button type="submit" class="btn btn-success">Enregistrer les modifications</button>
	<a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}" class="btn btn-secondary">Annuler</a>

	{{ form_end(form) }}
{% endblock %}
